{
  "sections": {
    "banner": {
      "type": "collection__main-banner",
      "settings": {
        "heading": "{{ collection.metafields.custom.main_heading.value }}",
        "link_text": "Browse the menu",
        "link_url": "{{ collection.metafields.custom.browse_link.value }}",
        "background_color": "#f8f4ef"
      }
    },
    "main": {
      "type": "collection__main",
      "settings": {
        "collection_breadcrumb": false,
        "collection_tags": false,
        "collection_sort": false,
        "collection_grid_heading": "Browse the menu",
        "show_sidebar": false,
        "sidebar_position": "left",
        "show_promo_banner": false,
        "image_darken": true,
        "promo_title": "Special sale on now!",
        "promo_text": "<p>Description of promotion with lots of details.<\/p>",
        "banner_height": "medium",
        "align_height": false,
        "collection_height": 200,
        "products_per_row": 3,
        "mobile_products_per_row": "1",
        "pagination_limit": 48,
        "pagination_type": "basic_pagination",
        "width": "standard",
        "padding_top": 0,
        "padding_bottom": 0,
        "css_class": "",
        "custom_css": ""
      }
    },
    "bottom": {
      "type": "collection__main-bottom",
      "settings": {
        "heading": "{{ collection.metafields.custom.second_heading.value }}",
        "text": "<p>{{ collection.metafields.custom.content_text | metafield_tag }}<\/p>",
        "background_color": "#f8f4ef"
      }
    },
    "bottom-recommendations": {
      "type": "collection__main-bottom-recommendations",
      "settings": {
        "heading_second": "Other Table & Twine Menus",
        "text_second": "<p>{{ collection.metafields.custom.collection_recommendation_text | metafield_tag }}<\/p>",
        "menu1": "{{ collection.metafields.custom.twine_menu_1.value }}",
        "menu2": "{{ collection.metafields.custom.twine_menu_2.value }}"
      }
    }
  },
  "order": [
    "banner",
    "main",
    "bottom",
    "bottom-recommendations"
  ]
}