{% if section.settings.text != blank or section.settings.image != blank%}
<div class="product-promo section-small general-section__secondary">
    <div class="product-promo__contents">
        {% if section.settings.heading != blank %}
            <h2 class="product-promo__heading t-big">
                {{ section.settings.heading }}
            </h2>
        {% endif %}
        {% if section.settings.text != blank %}
            <div class="t-small">
                {{ section.settings.text }}
            </div>
        {% endif %}
    </div>
    <div class="product-promo__image">
        {% if section.settings.image != blank %}
            <img  src="{{ section.settings.image | img_url: '750x550', crop: 'center' }}">
        {% endif %}
    </div>
</div>
{% endif %}

{% schema %}
  {
    "name": {
      "en": "Product Promo"
    },
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "heading"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "presets": [
    {
      "name": "Product Promo"
    }
  ]
  }
{% endschema %}