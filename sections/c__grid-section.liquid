<div style="color: {{section.settings.text_color}}; background-color:  {{ section.settings.background_color }};">
  <div class="grid-section section general-section {{ section.settings.section_type }}">

    <div class="grid-section__header grid-section__header--{{ section.settings.header_align }}"  style="text-align: {{ section.settings.header_align }}; max-width: {{ section.settings.header_width }}px" >
      {% if section.settings.section_heading != blank %}
      <h2 style="color: {{ section.settings.heading_color }};" class="grid-section__heading t-big">
        {{ section.settings.section_heading }}
      </h2>
      {% endif %}
      {% if section.settings.text != blank %}
      <p  class="grid-section__text t-small">
        {{ section.settings.text }}
      </p>
      {% endif %}
    </div>
    
    <div class="grid-section__contents grid-section__contents--{{section.blocks | size}}">
      {% for block in section.blocks %}
      <div class="grid-section__child {% if section.settings.center_block_text%} grid-section__child--center {% endif %}">
        <div>
          <div class="grid-section__image">
            {% if section.settings.show_number%}
            <div class="grid-section__index">{{ forloop.index }}</div>
            {% endif %}
            {% if block.settings.image%}
              {% if section.settings.use_landscape_image %}
                <img class="big-image"  src="{{ block.settings.image | img_url: '640x640', crop: 'center' }}">
              {% else %}
                <img class="big-image"  src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}">
              {% endif %}
            {% endif %}
            {% if block.settings.icon_image != 'none' %}
              <img  src="{{ block.settings.icon_image | asset_url }}">
            {% endif %}
          </div>
          <div class="">
            {% if block.settings.title != blank %}
            <h3 class="grid-section__title t-medium">{{ block.settings.title}}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
            <div class="grid-section__text t-small">{{ block.settings.text }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    
    {% if section.settings.button_link != blank %}
    <div class="grid-section__button">
        <a href="{{ section.settings.button_link }}" class="{{section.settings.button_style}}">
            {{ section.settings.button_text }}
        </a>
    </div>
    {% elsif section.settings.to_location_selector %}
    <div class="grid-section__button">
      <button class="{{section.settings.button_style}} popup-trigger-button">{{section.settings.button_text}}</button>
    </div>
    {% endif %}

  </div>
</div>
{% schema %}
  {
    "name": {
      "en": "Grid Section"
    },
    "class": "index-section index-section--grid",
    "max_blocks": 4,
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Section Heading",
        "default": "Lorem Ipsum"
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Sub Text"
      },
      {
        "type": "select",
        "id": "header_align",
        "label": "header Text Align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "section_type",
        "label": "Section Type",
        "options": [
          {
            "value": "section-small",
            "label": "Medium"
          },
          {
            "value": "section-big",
            "label": "Wide"
          }
        ],
        "default": "section-small"
      },
      {
        "type": "range",
        "id": "header_width",
        "label": "Header Max Width",
        "min": 0,
        "max": 1500,
        "default": 1000,
        "step": 20,
        "unit": "px"
      },
      {
        "type": "checkbox",
        "id": "show_number",
        "label": "Show Number",
        "default": false
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "VIEW ALL"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "checkbox",
        "id": "to_location_selector",
        "label": "Make button To Location Trigger",
        "default": false
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "options": [
          {
            "value": "b--primary",
            "label": "Primary"
          },
          {
            "value": "b--secondary",
            "label": "Secondary"
          }
        ],
        "default": "b--primary"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text Color"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      },
      {
        "type": "checkbox",
        "id": "center_block_text",
        "label": "Center Block Texts",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "use_landscape_image",
        "label": "Use Landscape Image",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Lorem Ipsum"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Text"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "select",
            "id": "icon_image",
            "label": "Select Icon Image",
            "options": [
              {
                "value": "none",
                "label": "No Icon"
              },
              {
                "value": "icon__chef.svg",
                "label": "Chef"
              },
              {
                "value": "icon__faster.svg",
                "label": "Faster"
              },
              {
                "value": "icon__fresh.svg",
                "label": "Fresh"
              }
              ,
              {
                "value": "icon__no-hassle.svg",
                "label": "No Hassle"
              }
              ,
              {
                "value": "icon__portions.svg",
                "label": "Portions"
              }
              ,
              {
                "value": "icon__subscription--modify.svg",
                "label": "Subscription Modify"
              }
              ,
              {
                "value": "icon__subscription--skip.svg",
                "label": "Subscription Skip"
              }
              ,
              {
                "value": "icon__subscription--swap.svg",
                "label": "Subscription Swap"
              }
              ,
              {
                "value": "icon__value.svg",
                "label": "Value"
              }
            ],
            "default": "none"
          }
        ]
      }
    ],
    "presets": [
    {
      "name": "Grid Section",
      "category": "Advanced layout"
    }
  ]
  }
{% endschema %}
